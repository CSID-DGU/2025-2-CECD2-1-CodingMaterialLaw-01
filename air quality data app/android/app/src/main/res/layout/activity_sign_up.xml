<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="28dp"
    tools:context=".ui.signup.SignUpActivity">

    <!-- 상단: 제목 + 로고 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Sign up"
            android:textColor="@android:color/black"
            android:textSize="38sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/monomate_logo" />
    </LinearLayout>

    <!-- 중간: 입력 폼 -->
    <LinearLayout
        android:id="@+id/layout_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:paddingHorizontal="0dp">


        <!-- 각 입력 섹션 공통 스타일 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginBottom="10dp"
            android:background="#F5F5F5"
            android:backgroundTint="#F5F5F5"
            android:clipToOutline="true"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/BirthDate"
                android:layout_width="@dimen/form_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Birth Date"
                android:textColor="#555555"
                android:textSize="@dimen/form_label_font_size" />

            <TextView
                android:id="@+id/text_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/BirthDate"
                android:layout_alignBaseline="@id/BirthDate"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/form_text_field_font_size"
                android:textAlignment="textEnd"
                android:hint="Select Birth Date"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/Gender"
                android:layout_width="@dimen/form_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Gender"
                android:textColor="#555555"
                android:textSize="@dimen/form_label_font_size" />

            <TextView
                android:id="@+id/text_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/Gender"
                android:layout_alignBaseline="@id/Gender"
                android:textSize="@dimen/form_text_field_font_size"
                android:spinnerMode="dropdown"
                android:textAlignment="textEnd"
                android:hint="Select Gender"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/BloodType"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Blood Type"
                android:textColor="#555555"
                android:textSize="@dimen/form_label_font_size" />

            <TextView
                android:id="@+id/text_blood_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_alignBaseline="@id/BloodType"
                android:layout_toEndOf="@+id/BloodType"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/form_text_field_font_size"
                android:textAlignment="textEnd"
                android:hint="Select Blood Type"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/Height"
                android:layout_width="@dimen/form_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Height"
                android:textColor="#555555"
                android:textSize="@dimen/form_label_font_size" />

            <EditText
                android:id="@+id/input_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="60dp"
                android:layout_toEndOf="@+id/Height"
                android:layout_alignBaseline="@id/Height"
                android:background="#F5F5F5"
                android:textSize="@dimen/form_text_field_font_size"
                android:hint="cm"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/Weight"
                android:layout_width="@dimen/form_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Weight"
                android:textColor="#555555"
                android:textSize="@dimen/form_label_font_size" />

            <EditText
                android:id="@+id/input_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="60dp"
                android:layout_toEndOf="@+id/Weight"
                android:layout_alignBaseline="@id/Weight"
                android:background="#F5F5F5"
                android:textSize="@dimen/form_text_field_font_size"
                android:hint="kg"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/Email"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Email"
                android:textColor="#555555"
                android:textSize="@dimen/form_label_font_size" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/Email"
                android:layout_alignBaseline="@id/Email"
                android:background="#F5F5F5"
                android:textSize="@dimen/form_text_field_font_size"
                android:hint="example@email.com"
                android:inputType="textEmailAddress"
                android:textAlignment="textEnd" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/Phone"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Phone"
                android:textColor="#555555"
                android:textSize="@dimen/form_label_font_size" />

            <TextView
                android:id="@+id/text_country_code"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/Phone"
                android:layout_alignBaseline="@id/Phone"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/form_text_field_font_size"
                android:textAlignment="center"
                android:text="US" />

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/text_country_code"
                android:layout_alignBaseline="@id/Phone"
                android:background="#F5F5F5"
                android:hint="01012345678"
                android:inputType="phone"
                android:textSize="@dimen/form_text_field_font_size"
                android:textAlignment="textEnd" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 하단: 버튼 -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Next" />
    </LinearLayout>

</RelativeLayout>
