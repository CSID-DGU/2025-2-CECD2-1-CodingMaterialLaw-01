        <LinearLayout
            android:id="@+id/llPersonalFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical" />

        <!-- Health Data section -->
        <TextView
            android:id="@+id/tvHealthSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="â¤ï¸ Health Data"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llHealthFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical" />

        <!-- Air Quality Data section -->
        <TextView
            android:id="@+id/tvAirSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ðŸŒ« Air Quality Data"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llAirFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical" />

        <!-- ì•„ëž˜ ì—¬ë°± -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
