<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 날짜/시간 -->
        <TextView
            android:id="@+id/tvMeasuredAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-04-05 15:40:33"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="8dp" />

        <!-- 6개 카드 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1줄: PM2.5 / PM10 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/itemPm25"
                    layout="@layout/view_metric_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"/>

                <include
                    android:id="@+id/itemPm10"
                    layout="@layout/view_metric_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- 2줄: Temperature / Humidity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <include
                    android:id="@+id/itemTemperature"
                    layout="@layout/view_metric_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"/>

                <include
                    android:id="@+id/itemHumidity"
                    layout="@layout/view_metric_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- 3줄: CO2 / VOC -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <include
                    android:id="@+id/itemCo2"
                    layout="@layout/view_metric_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"/>

                <include
                    android:id="@+id/itemVoc"
                    layout="@layout/view_metric_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
